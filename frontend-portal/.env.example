# Environment Variables for Frontend Portal

# API Base URL
# Development: http://localhost:8000
# Production: https://api.your-domain.com
VITE_API_BASE_URL=http://localhost:8000

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_VLM_ANALYSIS=true
VITE_ENABLE_CODE_SEARCH=true

# gRPC Server (for future direct gRPC-Web integration)
VITE_GRPC_SERVER_URL=http://localhost:50051

# VLM Server
VITE_VLM_SERVER_URL=http://127.0.0.1:8000

# Authentication
VITE_AUTH_ENABLED=false
VITE_AUTH_PROVIDER=local

# Analytics
VITE_ANALYTICS_ENABLED=false

# Debug Mode
VITE_DEBUG_MODE=true
